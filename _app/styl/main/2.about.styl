#about
	padding 100px 0 
	// background: linear-gradient(4deg, #fff 20%, rgba(0, 85, 249, 0.17) 0, rgba(0, 85, 249, 0.17) 70%, #fff 0, #fff 75%)
	// background-repeat no-repeat
	position relative
	&:before
		content ''
		display block
		position absolute
		z-index 0
		width 3000px
		height 600px
		background-color: rgba(0,85,249,0.17)
		transform: rotate(4deg)
		top: 100px
		left -200px
.about-text
	margin-bottom: 20px
	&:first-of-type
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 100px
			height 100px
			transform: rotate(45deg)
			background-color:  rgba(0, 85, 249, 0.17);
			top -20px
			left -100px
.circles
	position relative
	width 100%
	max-width 570px
	margin 40px auto 0
	display flex
	align-content: center
	justify-content: space-between
.circle
	width 150px
	height 150px
	border-radius: 50%
	background-color: transparent
	border 40px solid rgba(0, 85, 249, 0.5);