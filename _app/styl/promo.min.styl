@import 'base/0.fonts'

@import '../_css/bootstrap.min.css'

@import 'base/0.base'

@import 'base/0.header'

#main
	padding 0 0 60px
	min-height calc(100vh - 148px)
	text-align center
	overflow hidden
	position relative
	&:before
		content: '';
		display: block;
		position: absolute;
		width: 300px;
		height: 300px;
		transform: rotate(45deg);
		background-color: rgba(0,85,249,0.4);
		top: 230px;
		left: 30px;
.main-title
	font-size: 28px
	font-family: A
	font-weight: bold
	margin-bottom: 20px
	span
		color #0055f9
.video-wrapper-main
	max-width 560px
	margin 10px auto 15px
	border: 2px solid #0055f9
.main-subtitle
	font-size: 20px
	margin-top: 50px
.main-text
	font-size: 20px
	font-style: italic
	margin 10px 0 30px
.circles
	position relative
	width 100%
	max-width 500px
	margin 20px auto 0
	display flex
	align-content: center
	justify-content: space-between
.circle
	width 150px
	height 150px
	border-radius: 50%
	background-color: transparent
	border 40px solid rgba(0, 85, 249, 0.5);
.tg-black
	display none
.button-promo:hover
	.tg-white
		display none
	.tg-black
		display inline

@import 'base/0.footer'

@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contact.contact-skype
		margin 0 40px
@media screen and (max-width 991px)
	header
		margin-bottom: 0
	.main-subtitle
		margin-top: 0
	.circles
		margin-top: 40px
@media screen and (max-width 767px)
	.header-logo
		float: none
		display block
		margin 0 auto
	.contacts
		line-height: 1
		text-align center
		float none
	.contact
		display inline-block
	.circles
		max-width 345px
	.circle
		width 100px
		height 100px
		border-width: 30px
@media screen and (max-width 485px)
	#main
		padding 0 0 40px
		&:before
			// top 0
			left -100px
	.contact
		font-size: 14px
	.main-title
		font-size: 24px
		margin-bottom: 0
	.main-subtitle
		font-style: 18px
	.main-text
		font-style: 18px
		margin-bottom: 20px
	.circles
		margin-top: 30px
	footer
		padding 10px 0
		font-size: 14px
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
@media screen and (max-width 385px)
	#main
		padding 0 0 30px
		&:before
			left -200px
	.main-title
		font-size: 22px
	.circles
		max-width 200px
	.circle
		width 60px
		height 60px
		border-width: 20px