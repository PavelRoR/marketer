#prices
	padding: 60px 0 100px
.packet
	padding 20px
	background-color: #D4E2FE
	width 100%
	max-width 380px
	margin 0 auto 25px
	&-head
		&-title
			text-align center
			font-size: 36px
			font-family: AG
			font-weight: 800
			color #0055F9;
			line-height: 30px
			small 
				display block
				font-size: 16px
				font-family: R
				font-weight: normal
	&-body
		padding 20px 5px
		&-list
			li
				margin-bottom: 10px
				padding-left: 13px
				position relative
				list-style: none
				&:last-child
					margin-bottom: 0
				&:before
					content ''
					display block
					position absolute
					top 10px
					left 0
					width 6px
					height 6px
					transform: rotate(45deg)
					background-color: #0055F9;
.more-link
	font-size: 16px
	display inline-block
	margin-left: 10px
	font-style: italic
	color #aaa
	border-bottom: 1px dotted
	transition: all .2s ease
	&:focus
		color #aaa
	&:hover
		color #000
.cost
	text-align center
	margin-bottom: 15px
	font-size: 25px
	font-family: A
	font-weight: bold
	span
		display block
		font-size: 40px
		font-family: AG
		font-weight: 800
	&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
	&-today
		color limegreen
.prepayment
	text-align center
	&-title
		font-family: AG
		font-weight: 800
		color red
		font-size: 36px
		text-transform uppercase
	&-text
		font-size:  20px
		margin 10px 0 20px
.timer-title
	font-family: AG
	font-weight: 800
	color red
	font-size: 30px
	text-transform uppercase
	margin-top: 30px
	text-align center
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #D4E2FE
	box-shadow: none
.flip-clock-wrapper ul li a div div.inn
	color: #000
	background-color: #D4E2FE
	text-shadow: none
	border-radius: 0
	box-shadow: none
.flip-clock-wrapper ul li a div.down
	border-radius: 0
.flip-clock-wrapper .flip
	box-shadow: none
	border-radius: 0