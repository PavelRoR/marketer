		float: none
		display block
		margin 0 auto 5px
	.contacts
		line-height: 1
		text-align center
		float none
	.contact
		display inline-block
	.main-title
		font-size: 32px
		margin-bottom: 20px
	#plan:after
		top 2000px
	.general-title
		text-align center
		max-width none
	.block:before
		content: none
	.lets-item
		margin-bottom: 10px
	.lets-item-title
		width 40px
	.andrey-img
	.author-cert img
	.yulya-img
		position: static
		max-width 380px
	.general-title-author
		margin 20px 0
	#andrey:before
		left -200px
	#yulya:after
		left -100px
	.carousel
	.carousel-inner-yulya
		width 100%
		max-width 560px
		margin 0 auto 30px
	.last-title
		font-size: 30px
	.last-text
		font-size: 20px
		margin 20px 0
	#last:before
		top 150px
@media screen and (max-width 615px)
	.andrey-img
	.yulya-img
