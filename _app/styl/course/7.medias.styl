@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contact.contact-skype
		margin 0 40px
	.block-description-list li
		font-size: 18px
		&:before
			top 11px
	.packet
		max-width 420px
@media screen and (max-width 991px)
	.circles
		max-width 345px
	.circle
		width 110px
		height 110px
		border-width: 30px
	.yulya-img
		left 0
	#last
		padding 50px 0 0
	.button-last
		margin-bottom: 50px
@media screen and (max-width 767px)
	header
		margin-bottom: 20px
