#records
	padding 60px 0
	position relative
	background-image url(../img/backs/about.png)
	background-repeat no-repeat
	background-position: top center
	background-size: 100% 100%
.rec-title
	text-align center
	font-size: 20px
	font-family: A
	font-weight: bold
	margin-bottom: 10px
.video-wrapper-rec
	width 100%
	max-width 560px
	margin 0 auto
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	margin-bottom: 20px
.rec-text
	width 100%
	max-width 560px
	margin 10px auto 0
	&:last-of-type
		margin-bottom: 25px
.recs-text
	text-align center
	font-size: 22px
.button-rec
	margin-top: 30px